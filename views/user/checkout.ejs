	<script>
		let amount = document.getElementById("totalprice").innerHTML;

		$('#checkOut-form').submit((e) => {
			e.preventDefault()
			$.ajax({
				url: "/place-order",
				method: 'post',
				data: $('#checkOut-form').serialize(),
				success: (response) => {

					if (response.CODstatus && response.method == "COD") {
						orderplaced('Order Placed')
						setTimeout(() => {
							location.href = "/order-details"
						}, 2000);

					} else if (response.paypalstatus == true && response.method == "paypal") {
						location.href = '/paypal';
					}
					else if (response.walletstatus == true && response.method == "wallet") {


						if ('<%=wallet%>' != undefined) {
							if ('<%=orgTotal%>' > '<%=wallet.amount %>') {
								walletAlert()
							} else {
								orderplaced('Order Placed')
								setTimeout(() => {
									location.href = "/order-details"
								}, 2000);
							}
						} else {
							document.getElementById('wallet').style.display = 'none'

						}
					}

					else {

						Razorpaypayment(response)

					}
				}


			}).fail(function (data) {
				// Fail method
				console.log(data.responseText)
			});

		})
		function Razorpaypayment(order) {

			var options = {
				"key": "rzp_test_at5j0lXKS9Vnjv", // Enter the Key ID generated from the Dashboard
				"amount": parseInt(amount) * 100, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
				"currency": "INR",
				"name": "Fruithka",
				"description": "Test Transaction",
				"image": "https://example.com/your_logo",
				"order_id": order.order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
				"handler": function (response) {

					verifyPayment(response, order)
				},
				"prefill": {
					"name": "Gaurav Kumar",
					"email": "gaurav.kumar@example.com",
					"contact": "9999999999"
				},
				"notes": {
					"address": "Razorpay Corporate Office"
				},
				"theme": {
					"color": "#3399cc"
				}
			};
			var rzp1 = new Razorpay(options);
			rzp1.open();
			function verifyPayment(payment, order) {

				$.ajax({
					url: 'verify-payment',
					data: {
						payment,
						order
					},
					method: 'post',
					success: (response) => {
						if (response.status) {
							location.href = "/order-details"
						} else {
							alert('failed')
						}
					}
				})
			}
		}


		///walletAlert()===============================
		function walletAlert() {

			Swal.fire({
				icon: 'error',
				title: 'Oops...',
				text: 'Wallet Amount Is Not Enogh !',
				// footer: '<a href="">Why do I have this issue?</a>'
			})
		}
		function orderplaced(text) {
			Swal.fire({
				position: 'center',
				icon: 'success',
				title: text,
				showConfirmButton: false,
				timer: 15000
			})
		}
	</script>
